<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eefbfa"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="418dp"
        android:layout_height="731dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="342dp"
            android:layout_height="37dp"
            android:text="What would you like to convert?"
            android:textColor="#a424a8"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.293" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/currencyButton"
            android:layout_width="247dp"
            android:layout_height="108dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/currencyround"
            android:drawableStart="@drawable/ic_launcher_foreground"
            android:text="Currency"
            android:textColor=" #041413"

            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/unitButton"
            android:layout_width="237dp"
            android:layout_height="118dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/unitround"
            android:drawableStart="@drawable/measurmenticon"
            android:text="Units"
            android:textColor="#041413"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currencyButton" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:gravity="center|center_horizontal"
            android:text="Unit/Currency Converter"
            android:textColor="#2432a8"
            android:textSize="30sp"
            app:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="164dp"
            android:layout_height="103dp"
            android:layout_marginTop="4dp"
            android:background="#FFFF8F"
            android:drawableStart="@drawable/praise_foreground"
            android:text="Other"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unitButton"
            app:layout_constraintVertical_bias="0.282" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>